&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl"> &lt;span class="nv">dataDir&lt;/span>&lt;span class="o">=&lt;/span>/home/ling/zookeeper/data
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">
